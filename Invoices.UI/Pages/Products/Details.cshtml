@page
@model Invoices.UI.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Product Details";
}

<h4 style="float:right">Product Details</h4>
<br />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" >
            Product Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        <dt class="col-sm-2">
           Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
    </dl>
</div>
<div style="float:right">
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> |
    <a asp-page="./Index">Return</a>
</div>
